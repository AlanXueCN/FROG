{
  "env": {
    "test": {
      "plugins": [
        "macros",
        "@babel/plugin-transform-flow-strip-types",
        [
          "@babel/plugin-proposal-decorators",
          {
            "legacy": true
          }
        ],
        [
          "@babel/plugin-proposal-class-properties",
          {
            "loose": true
          }
        ],
        "@babel/plugin-proposal-optional-chaining",
        [
          "captains-log",
          {
            "methods": [
              "debug",
              "error",
              "exception",
              "log",
              "warn"
            ]
          }
        ]
      ],
      "presets": [
        "@babel/preset-env",
        "@babel/preset-react",
        [
          "@babel/preset-stage-0",
          {
            "decoratorsLegacy": true
          }
        ]
      ]
    }
  }
}
